extends ../_layouts/base

include ../_modules/paradeportes-banner/paradeportes-banner
include ../_modules/empresas/empresas
include ../_modules/contacto/contacto
include ../_modules/pagination/pagination
include ../_modules/cta/cta

block config
  //- Correct base url pathing for this page
  - var baseUrl = '../'

block content
    main.galeria
        section.galeria__hero
            .container
                .row
                    .col-xs-24.col-sm-12
                        h1.galeria__hero__title Galer√≠a
                    .col-xs-24.col-sm-12
                        +cta
        section.galeria__body
            .container-fluid
                .row.nopadding
                    each item in site.data.galeria
                        .col-xs-12.col-sm-6
                            .galeria__item
                                if item.type == 'video'
                                    a(href="https://www.youtube.com/watch?v=#{item.src}")
                                        img(src="http://img.youtube.com/vi/#{item.src}/maxresdefault.jpg")
                                if item.type == 'img'
                                    a(href=item.src)
                                        img(src=item.src)
            .container
                .row
                    .col-xs-24
                        +pagination(5)
                        
        +paradeportes-banner
        +empresas
        +contacto
                                        
